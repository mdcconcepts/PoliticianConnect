<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    tools:context="com.mdcconcepts.androidapp.politicianconnect.common.LanguageActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/narendramodi" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:background="@drawable/language_gradient_bg"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"

            android:id="@+id/liniear">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="100dp" >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/ic_language"
                        android:layout_margin="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/MH_CHOOSE_LANGUAGE"
                        android:id="@+id/textView"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Choose your language "
                        android:id="@+id/textView2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/FrameLayout_LanguageButtonContianer"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/ButtonController_Hindi"
                    android:text="@string/NL_HINDI"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_type2"
                    android:layout_margin="3dp"
                    android:layout_gravity="top|left" />

                <Button
                    android:id="@+id/ButtonController_Marathi"
                    android:text="@string/NL_MARATHI"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_type2"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_horizontal|top" />

                <Button
                    android:id="@+id/ButtonController_English"
                    android:text="English"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_type2"
                    android:layout_margin="3dp"
                    android:layout_gravity="right|top" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
